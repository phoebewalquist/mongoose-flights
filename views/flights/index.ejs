<%- include('../partials/header') %>

<table id="list">
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight No.</th>
      <th>Departs</th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody>
    <% flights.forEach((flight) => { %>
      <tr>
        <td><%= flight.airline %></td>
        <td><%= flight.airport %></td>
        <td><%= flight.flightNo %></td>
        <td><%= dateFormat(flight.departs) %></td>
        <td> <a href="/flights/<%= flight._id %>">Details</a>
       </td>
      </tr>
    <% }); %>
  </tbody>
</table>
    
<%- include('../partials/footer') %>